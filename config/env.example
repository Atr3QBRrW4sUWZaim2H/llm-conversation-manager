# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=conversations
DB_USER=your_user
DB_PASSWORD=your_password

# Optional: For Claude imports
CLAUDE_COOKIE=your_claude_cookie_here
USER_AGENT=your_user_agent_here

# Optional: For image uploads
IMGUR_BEARER=your_imgur_bearer_token_here
GIST_PAT=your_github_personal_access_token_here

# Optional: For OpenAI API (embeddings, etc.)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: For Supabase (if using Supabase instead of direct PostgreSQL)
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/conversation_manager.log

# Web Interface
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0
